<p id="notice"><%= notice %></p>

<div class="page-header text-center">
  <h1>Listing Blog Posts<small>For all types of meats.</small></h1>
</div>


<div class='container'>
  <% @blog_posts.each do |blog_post| %>
    <div class="well well-lg blog-well">
      <h3> <%= link_to blog_post.title, blog_post %></h3>
      <p><%= blog_post.user.username %></p>
      <p>published: <%= local_time(blog_post.created_at) %></p>
      <p><%= truncate(blog_post.blog_entry, length:100) %></p>
        <div class="btn-group-sm" role="group" aria-label="...">
          <button type="button" class="btn btn-default"><%= link_to 'See More', blog_post %></button>
          <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_blog_post_path(blog_post) %></button>
          <button type="button" class="btn btn-default"><%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </div>
    </div>
  <% end %>  
</div>

<br>

